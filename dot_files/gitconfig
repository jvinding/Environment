[user]
    name = Jeremy Vinding
    email = jeremy.vinding@logrhythm.com
[color]
    diff = auto
    status = auto
    branch = auto
	ui = true
[alias]
    co = checkout
    conflicts = diff --name-only --diff-filter=U
    pr = pull --rebase --autostash
    pf = pull --ff-only
    pull-request = !hub pull-request
    s = status -sb
    b = branch
    sb = show-branch
    sbt = show-branch --topics
    d = diff
    vd = difftool -y -t vimdiff -R
    fa = fetch --all
    fap = fetch --all --prune
    dc = diff --cached
    su = stash save --include-untracked
    sl = stash list
    ss = stash show -u
    spop = stash pop
    merge-no-space = merge -Xignore-space-change
    mf = merge --ff-only
    changes = whatchanged -p
    sup = submodule update --recursive
    shootmenow = submodule
    l = log --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)[%an]%Creset' --abbrev-commit --date=relative
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)[%an]%Creset' --abbrev-commit --date=relative
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls-assumed = !"git ls-files -v | grep '^[a-z]' | cut -c3-"
    assume = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    ls = ls-files --exclude-standard
    lsm = ls-files --exclude-standard -m
    lso = ls-files --exclude-standard -o
    lsi = ls-files --exclude-standard -io
    lsc = ls-files --unmerged
    lsd = ls-files --deleted
    ff = flow feature
    ffl = flow feature list
    ffc = flow feature checkout
    list-whitespace-only-files = !"git diff -b --numstat | egrep $'^0\t0\t' | cut -d$'\t' -f3-"
    checkout-whitespace-only-files = !"git list-whitespace-only-files | sed -e 's/\\(.*\\)/\"\\1\"/' | xargs git checkout HEAD --"
    unstage = reset HEAD
    permission-reset = !git diff -p -R | grep -E \"^(diff|(old|new) mode)\" | git apply
    hash = rev-parse HEAD
    pat = !git push --all && git push --tags
[core]
    excludesfile = /Users/jvinding/.gitignore
    autocrlf = input
    ignorecase = false
	whitespace = trailing-space,space-before-tab,tab-in-indent
	pager = diff-so-fancy | less --tabs=4 -RFX
[branch]
    autosetupmerge = true
[push]
    default = current
[mergetool]
    prompt = false
[merge]
    conflictstyle = diff3
    tool = Kaleidoscope
[diff]
    tool = Kaleidoscope
    compactionHeuristic = true
[submodule]
    fetchJobs = 4
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustexitcode = true
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
