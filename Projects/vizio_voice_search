export Vizio__Caching__Enabled=false
export MetaDataService__TimeoutMilliseconds=3000
export MetaDataService__Retries=1
export MetaDataService__BaseUrl=https://metadata-prod.smartcasttv.com/
export LogLevel__Vizio__Services__VoiceSearch__Common__XRay=Debug

hitch() {
    cd $PROJECT_DIR/vizio-services-voice-search-tools
}

hitch_build() {
    hitch
    docker build --pull --rm -f "Dockerfile" -t vizioservicesvoicesearchtools:latest "."
}

hitch_start() {
    hitch
    docker run --rm -it  -p 443:443/tcp -p 80:80/tcp vizioservicesvoicesearchtools:latest
}

voice_search() {
    cd $PROJECT_DIR/vizio-services-voice-search
}
